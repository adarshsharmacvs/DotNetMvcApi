@model IEnumerable<CommentsWebService.Models.comment>

@{
    ViewBag.Title = "Index";
}

<h2 align="center">List of Comments</h2>

<p>
    @Html.ActionLink("Add a Comment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.commentDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.commentDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.commentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.commentID })
        </td>
    </tr>
}

</table>
